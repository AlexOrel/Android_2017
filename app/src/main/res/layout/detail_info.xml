<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="60dp">


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1000"
        android:background="@color/greenSber"/>

    <ImageView
        android:layout_height="50dp"
        android:layout_width="40dp"
        android:src="@drawable/arrow"
        android:clickable="true"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/editTextDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:textColor="@android:color/white"
        android:text="@string/additionalOfficeDistanceTo"/>

    <TextView
        android:id="@+id/editTextRelative1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:textColor="@android:color/white"
        android:text="@string/additionalOfficeLocation"/>
    <TextView
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/additionalOfficeName"
        android:layout_below="@id/editTextRelative1"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="-10dp"

        android:textSize="10sp" />
</RelativeLayout>