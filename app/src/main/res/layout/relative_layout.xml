<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageViewRelative"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/sber" />

    <TextView
        android:id="@+id/editTextRelative1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/imageViewRelative"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:text="@string/additionalOfficeLocation"/>
    <TextView
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/additionalOfficeName"
        android:layout_below="@id/editTextRelative1"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        android:textSize="10sp" />
    <TextView
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:inputType="textPersonName"
        android:text="@string/additionalOfficeDistanceTo"/>


</RelativeLayout>